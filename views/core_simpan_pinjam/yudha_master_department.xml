<odoo>
    <data>
        <record id="view_master_department_tree" model="ir.ui.view">
            <field name="name">yudha.master.department.tree</field>
            <field name="model">yudha.master.department</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Master Department">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- form -->
        <record id="view_master_department_form" model="ir.ui.view">
            <field name="name">yudha.master.department.form</field>
            <field name="model">yudha.master.department</field>
            <field name="type">form</field>
            <field name="priority" eval="7"/>
            <field name="arch" type="xml">
                <form string="Master Department" >
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Master Department"/>
                        </div>
                        <group string="">
                            <field name="name"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>